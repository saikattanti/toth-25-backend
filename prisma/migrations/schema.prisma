generator client {
 provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
model User {
  id          Int      @id @default(autoincrement())//delete
  fullName    String
  email       String   @unique
  password    String
  phoneNumber String? @unique
  department  String
  deptRollNo  String
  isMod       Boolean @default(false)
  createdAt   DateTime @default(now())
}

model Riddle {
  id            Int      @id @default(autoincrement())//delete
  name          String
  riddle        String
  hint          String
  encryptedData String//should be 16 bytesmax for 128bit encryption
  //hint is 4 characters and unique for each variable 
  //hint is the key for encrypted data,randomly generated
  //QR Code data should be in this format
  //hint:encrytedData
  //example
  //oT3b:dkopkapedpdsfa  
  createdAt DateTime @default(now())
  createdBy Int
  updatedAt DateTime @updatedAt
  updatedBy Int
}

model emailAuth{
  id          Int//delete
  userId      Int
  otp         String
  //otp should not exceed 4 characters...
  isVerified  Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime? @updatedAt
}

model scans{
  id Int//delete
  scannedByUserId Int
  riddleHint      String 
  createdAt       DateTime
}

